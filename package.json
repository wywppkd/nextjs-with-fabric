{
  "name": "nextjs-with-fabric",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,scss,md,json}'",
    "lint-staged": "lint-staged",
    "lint:style": "stylelint --fix \"src/**/*.scss\" --syntax scss",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && npm run lint:style",
    "tsc": "tsc --noEmit"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "**/*.scss": "stylelint --syntax scss",
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,scss,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "next": "12.0.8",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "@umijs/fabric": "^2.9.0",
    "lint-staged": "^10.0.7",
    "sass": "^1.48.0",
    "typescript": "4.5.4",
    "yorkie": "^2.0.0"
  }
}
